<div class="container">
<h1>All Restaurants</h1>
<% @restaurants.each do |restaurant| %>
<h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
<h4><%= restaurant.category.capitalize %></h4>
<p>Address: <%= restaurant.address %> || Call: <%= restaurant.phone_number %></p>
<% end %>
<p><%= link_to "Add a New Restaurant", new_restaurant_path, class: "btn btn-primary" %></p>
</div>
